<?xml version="1.0" encoding="utf-8"?>
<com.seven.clip.nziyodzemethodist.HalfRightCoordinatorLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fadedBlack"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/backgroundView"
        app:srcCompat="@drawable/ic_info_black_24dp"
        android:tint="@color/white"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.xenione.libs.swipemaker.SwipeLayout
        android:id="@+id/foregroundView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="Sample"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/listTextSize"
            android:textAllCaps="false"
            android:id="@+id/swipeRightTextView"
            android:textAlignment="textStart"
            android:gravity="start|center_vertical"
            android:fontFamily="sans-serif-medium"
            style="@style/Widget.AppCompat.Button.Borderless.Colored" />


    </com.xenione.libs.swipemaker.SwipeLayout>

</com.seven.clip.nziyodzemethodist.HalfRightCoordinatorLayout>