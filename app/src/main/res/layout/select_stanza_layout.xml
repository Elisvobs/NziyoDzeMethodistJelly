<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.github.mmin18.widget.RealtimeBlurView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pickNumBlur"
        app:realtimeOverlayColor="#70ffffff" />

    <TextSwitcher
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:id="@+id/stanzaShow"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stanzaShow"
        android:id="@+id/stanzaTableOptions"
        android:gravity="center"
        android:stretchColumns="0,1">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Share as"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:id="@+id/selectStanzaShareAsTextView"/>
        </TableRow>
        <TableRow>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_card_black_24dp"
                android:id="@+id/selectStanzaCardImageView"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:tint="@color/black"
                app:srcCompat="@drawable/font_size_icon"
                android:id="@+id/selectStanzaTextImageView"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card"
                android:id="@+id/selectStanzaCardTextView"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text"
                android:id="@+id/selectStanzaTextTextView"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:padding="10dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textColor="@color/black"
                android:text="Bookmark"
                android:textSize="20sp"
                android:id="@+id/selectStanzaSBookmarkTextView"/>
        </TableRow>
        <TableRow>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_bookmark_black_24dp"
                android:id="@+id/selectStanzaBookmarkImageView"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:tint="@color/black"
                app:srcCompat="@drawable/ic_format_color_text_black_24dp"
                android:id="@+id/selectStanzaUnderlineImageView"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Open"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:id="@+id/selectStanzaFirstOpenTextView"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Underline"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:id="@+id/selectStanzaUnderlineTextView"
                android:padding="10dp"/>
        </TableRow>
    </TableLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stanzaTableOptions"
        android:visibility="invisible"
        android:id="@+id/stanzaEditText"
        android:textIsSelectable="true"
        android:textSize="24sp"
        android:alpha="0.0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textSize="150sp"
        android:alpha="0.1"
        android:text="119"
        android:id="@+id/selectStanzaHymnNumberView"/>

</RelativeLayout>