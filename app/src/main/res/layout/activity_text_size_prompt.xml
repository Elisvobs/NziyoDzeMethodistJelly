<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_text_size_prompt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.seven.clip.nziyodzemethodist.TextSizePrompt">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:textColor="@color/white"
        android:shadowRadius="15.0"
        android:shadowDy="12.0"
        android:shadowDx="5.0"
        android:shadowColor="@color/black"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/changeTextPrompt"
        android:textSize="25sp" />

    <Button
        android:text="@string/Deny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/but_two"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/changeTextNoBut"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_alignParentRight="true" />

    <Button
        android:text="@string/Accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changeTextYesBut"
        android:background="@drawable/but_one"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignParentLeft="true" />
</RelativeLayout>
