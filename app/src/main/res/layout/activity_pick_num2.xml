<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_pick_num2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seven.clip.nziyodzemethodist.pickNum2">

    <TextView
        android:text="A"
        android:gravity="center"
        android:textColor="@color/white"
        android:visibility="invisible"
        android:textSize="30sp"
        android:elevation="10dp"
        android:background="@drawable/scroll_prev"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/numScrollPop"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/natured"
        android:scaleType="centerCrop"
        android:id="@+id/pickNumBg" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/numberList"
        android:divider="@color/burn"
        android:fastScrollEnabled="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
