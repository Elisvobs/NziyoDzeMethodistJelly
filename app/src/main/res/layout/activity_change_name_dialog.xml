<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/square_white"
    tools:context="com.seven.clip.nziyodzemethodist.ChangeNameDialog">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:stretchColumns="0,1">
        <TableRow>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:id="@+id/cancelName"
                app:srcCompat="@drawable/close_icon"
                android:tint="@color/burn"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/acceptName"
                android:padding="20dp"
                app:srcCompat="@drawable/ic_check_black_24dp"
                android:tint="@color/burn"/>
        </TableRow>
    </TableLayout>

    <EditText
        android:hint="Set name..."
        android:id="@+id/usernameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:textSize="20sp"
        android:shadowColor="@color/black"
        android:shadowDy="0.0"
        android:shadowDx="0.0"
        android:shadowRadius="10.0"
        android:gravity="center"
        android:ems="30"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:stretchColumns="0,1,2"
        android:animateLayoutChanges="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/hymnNumNotification">

        </TableRow>

    </TableLayout>

</RelativeLayout>
