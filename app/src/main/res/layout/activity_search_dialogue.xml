<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_search_dialogue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/square_round"
    tools:context="com.seven.clip.nziyodzemethodist.SearchDialogue">

    <EditText
        android:hint="any phrase in hymn..."
        android:id="@+id/searchBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="30sp"
        android:shadowColor="@color/black"
        android:shadowDy="0.0"
        android:shadowDx="0.0"
        android:shadowRadius="10.0"
        android:gravity="center"
        android:ems="30"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionSearch"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_below="@+id/searchBox"
        android:id="@+id/searchDialogueButton"
        app:srcCompat="@drawable/search_icon_on"/>
</RelativeLayout>
