<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hymn_list2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    tools:context="com.seven.clip.nziyodzemethodist.hymnList2">


    <TextView
        android:text="A"
        android:gravity="center"
        android:textColor="@color/white"
        android:visibility="invisible"
        android:textSize="60sp"
        android:elevation="10dp"
        android:background="@drawable/scroll_prev"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/hymnScrollPop"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/natured"
        android:scaleType="centerCrop"
        android:id="@+id/hymnNumBg" />


    <ListView
        android:layout_width="match_parent"
        android:id="@+id/hymnList"
        android:layout_height="match_parent"
        android:fastScrollEnabled="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        app:srcCompat="@drawable/back_icon"
        android:id="@+id/hymnListBackButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:alpha="0.3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
