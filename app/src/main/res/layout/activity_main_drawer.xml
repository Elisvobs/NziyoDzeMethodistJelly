<?xml version="1.0" encoding="utf-8"?>
<com.mxn.soul.flowingdrawer_core.FlowingDrawer
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:edPosition="1"
    app:edMenuSize="300dp"
    app:edMenuBackground="@color/white"
    tools:context="com.seven.clip.nziyodzemethodist.MainDrawer">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com..seven.clip.nziyodzemethodist.MainActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/nature"
            android:scaleType="centerCrop"
            android:id="@+id/mainBg" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="380dp"
            android:layout_marginLeft="-100dp"
            android:rowCount="4"
            android:columnCount="4"
            android:rotation="45"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/gridLayout"
            android:layout_alignParentLeft="true">

            <Button
                android:layout_width="@dimen/buttonSquareSize"
                android:layout_height="@dimen/buttonSquareSize"
                android:background="@drawable/circle"
                android:layout_row="0"
                android:layout_column="0"
                android:id="@+id/hymnNumberBut" />

            <Button
                android:layout_width="@dimen/buttonSquareSize"
                android:layout_height="@dimen/buttonSquareSize"
                android:background="@drawable/circle"
                android:layout_row="0"
                android:layout_column="1"
                android:id="@+id/hymnListBut" />

            <Button
                android:layout_width="@dimen/buttonSquareSize"
                android:layout_height="@dimen/buttonSquareSize"
                android:background="@drawable/circle"
                android:layout_row="0"
                android:layout_column="2"
                android:visibility="invisible"
                android:id="@+id/updateHymnBut" />

            <Button
                android:layout_width="@dimen/buttonSquareSize"
                android:layout_height="@dimen/buttonSquareSize"
                android:background="@drawable/circle"
                android:layout_row="2"
                android:layout_column="2"
                android:id="@+id/captionsListBut"/>

            <Button
                android:layout_width="@dimen/buttonSquareSize"
                android:layout_height="@dimen/buttonSquareSize"
                android:background="@drawable/circle"
                android:id="@+id/favBut"
                android:layout_row="1"
                android:layout_column="1" />

            <Button
                android:layout_width="@dimen/buttonSquareSize"
                android:layout_height="@dimen/buttonSquareSize"
                android:background="@drawable/circle"
                android:id="@+id/recentBut"
                android:layout_row="1"
                android:layout_column="2" />

            <Button
                android:layout_width="@dimen/buttonSquareSize"
                android:layout_height="@dimen/buttonSquareSize"
                android:background="@drawable/circle"
                android:id="@+id/readingsBut"
                android:layout_row="1"
                android:layout_column="3" />


            <TextView
                android:text="@string/hymnNumberButtonText"
                android:textSize="@dimen/mainTextButtonsSize"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:rotation="-45"
                android:textColor="@color/white"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:layout_column="0"
                android:layout_row="0"
                android:elevation="100dp"
                android:id="@+id/hymnNumText"
                android:fontFamily="sans-serif"
                android:textAlignment="center" />

            <TextView
                android:text="@string/hymnListButtonText"
                android:textSize="@dimen/mainTextButtonsSize"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:rotation="-45"
                android:textColor="@color/white"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:layout_column="1"
                android:layout_row="0"
                android:elevation="100dp"
                android:id="@+id/hymnListText"
                android:fontFamily="sans-serif"
                android:textAlignment="center" />


            <TextView
                android:text="@string/updateHymnButtonText"
                android:textSize="@dimen/mainTextButtonsSize"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:rotation="-45"
                android:textColor="@color/white"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:visibility="invisible"
                android:layout_column="2"
                android:layout_row="0"
                android:elevation="100dp"
                android:id="@+id/updateHymnButText"
                android:fontFamily="sans-serif"
                android:textAlignment="center" />

            <TextView
                android:text="@string/favButtonText"
                android:textSize="@dimen/mainTextButtonsSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:rotation="-45"
                android:textColor="@color/white"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:layout_column="1"
                android:layout_row="1"
                android:elevation="100dp"
                android:id="@+id/favText"
                android:fontFamily="sans-serif"
                android:textAlignment="center" />

            <TextView
                android:text="@string/recentButtonText"
                android:textSize="@dimen/mainTextButtonsSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:rotation="-45"
                android:textColor="@color/white"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:layout_column="2"
                android:layout_row="1"
                android:elevation="100dp"
                android:id="@+id/recentText"
                android:fontFamily="sans-serif"
                android:textAlignment="center" />

            <TextView
                android:text="@string/captionButtonText"
                android:textSize="@dimen/mainTextButtonsSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:rotation="-45"
                android:textColor="@color/white"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:layout_column="2"
                android:layout_row="2"
                android:elevation="100dp"
                android:id="@+id/captionText"
                android:fontFamily="sans-serif"
                android:textAlignment="center" />

            <TextView
                android:text="@string/readingsText"
                android:textSize="@dimen/mainTextButtonsSize"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:rotation="-45"
                android:textColor="@color/white"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:layout_column="3"
                android:layout_row="1"
                android:elevation="100dp"
                android:id="@+id/readingsText"
                android:fontFamily="sans-serif"
                android:textAlignment="center" />

        </GridLayout>

            <Button
                android:text="test button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/test"
                android:visibility="invisible"
                android:shadowColor="@color/black"
                android:layout_alignParentRight="true" />

        <!--TextView
            android:text=" Nziyo DzeMethodist"
            android:id="@+id/mainAppTitle"
            android:background="@drawable/top_rounded_white"
            android:textColor="@color/burn"
            android:textSize="30sp"
            android:gravity="center"
            android:fontFamily="cursive"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:elevation="@dimen/white_card_elevation"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/-->

        <ViewSwitcher
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mainDrawerTitleSwitcher"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/top_rounded_white"
            android:elevation="5dp"
            android:animateLayoutChanges="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/app_name"
                android:textSize="30sp"
                android:id="@+id/mainAppTitle"
                android:textColor="@color/burn"
                android:gravity="center"
                android:fontFamily="cursive"/>

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mainSearchBar"
                android:imeOptions="actionSearch"
                android:textSize="30sp"
                android:textColor="@color/burn"
                android:gravity="center"
                android:inputType="textNoSuggestions"
                android:background="#00000000"
                />


        </ViewSwitcher>

        <ImageView
            app:srcCompat="@drawable/menu_icon"
            android:id="@+id/openMainDrawer"
            android:layout_margin="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="@dimen/white_card_elevation"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            app:srcCompat="@drawable/menu_icon_on"
            android:id="@+id/openMainDrawer_on"
            android:layout_margin="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="@dimen/white_card_elevation"
            android:visibility="invisible"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            app:srcCompat="@drawable/search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/white_card_elevation"
            android:id="@+id/searchButton"
            android:layout_margin="7dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <ImageView
            app:srcCompat="@drawable/close_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/white_card_elevation"
            android:layout_margin="7dp"
            android:id="@+id/searchButton_on"
            android:visibility="invisible"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <com.mxn.soul.flowingdrawer_core.FlowingMenuLayout
        android:id="@+id/startNavigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/id_container_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.mxn.soul.flowingdrawer_core.FlowingMenuLayout>



</com.mxn.soul.flowingdrawer_core.FlowingDrawer>

