<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hymn_display"
    android:saveEnabled="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"

    tools:context="com.seven.clip.nziyodzemethodist.hymnDisplay">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/natured"
        android:id="@+id/imageView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/hymnTitle"
        android:id="@+id/captionDisplay"
        android:animateLayoutChanges="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#30ffffff"
            android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/caption"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/square_cap"
            android:id="@+id/showCaption"
            android:visibility="invisible"
            android:layout_marginTop="-30dp"
            android:layout_weight="1">
        </Button>

    </LinearLayout>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="cursive"
        android:background="@drawable/square_hymn"
        android:id="@+id/hymnTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:textSize="50dp"
        android:textColor="#50000000"
        android:elevation="1dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:id="@+id/hymnDisplayNum"
        android:layout_marginStart="17dp"
        android:layout_marginTop="70dp"
        android:layout_alignTop="@id/hymnTitle"
        android:layout_marginLeft="17dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:textSize="50dp"
        android:textColor="#50ffffff"
        android:elevation="100dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:id="@+id/hymnDisplayNumlight"
        android:layout_marginStart="17dp"
        android:layout_marginTop="70dp"
        android:visibility="invisible"
        android:layout_alignTop="@id/hymnTitle"
        android:layout_marginLeft="17dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="#dd000000"
        android:textSize="25sp"
        android:textAlignment="center"
        android:gravity="center"
        android:id="@+id/chorusFloat"
        android:elevation="10dp"
        android:layout_alignTop="@id/hymnTitle"
        android:visibility="invisible"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollHymn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/captionDisplay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/hymnLayout" />
    </ScrollView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:stretchColumns="0,1,2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="@dimen/smallTableSizeButton"
                android:background="@color/transBlack"
                android:visibility="invisible"
                android:clickable="true"
                android:id="@+id/hymnMoreOptionsEnglishLayout">
                <ImageView
                    app:srcCompat="@drawable/en_unavail"
                    android:layout_width="40dp"
                    android:alpha=".3"
                    android:layout_height="40dp"
                    android:id="@+id/hymnMoreOptionsEnglish"/>
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="@dimen/smallTableSizeButton"
                android:background="@color/transBlack"
                android:visibility="invisible"
                android:clickable="true"
                android:id="@+id/hymnMoreOptionsCaptionsLayout">
                <ImageView
                    app:srcCompat="@drawable/caption_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hymnMoreOptionsCaptions"/>

            </RelativeLayout>
            <TextView
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallTableSizeButton"
                android:visibility="visible"
                android:id="@+id/numbers"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallTableSizeButton"
                android:background="@color/transBlack"
                android:gravity="center"
                android:visibility="invisible"
                android:clickable="true"
                android:id="@+id/hymnShareButAppLayout">
                <ImageView
                    app:srcCompat="@drawable/app_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hymnShareButApp"/>

            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallTableSizeButton"
                android:background="@color/transBlack"
                android:gravity="center"
                android:visibility="invisible"
                android:clickable="true"
                android:id="@+id/hymnMoreOptionsNightLayout">
                <ImageView
                    app:srcCompat="@drawable/color_mode_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hymnMoreOptionsNight"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallTableSizeButton"
                android:background="@color/transBlack"
                android:gravity="center"
                android:visibility="invisible"
                android:clickable="true"
                android:id="@+id/hymnFavButYesLayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hymnFavButYes"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallTableSizeButton"
                android:background="@color/transBlack"
                android:gravity="center"
                android:visibility="invisible"
                android:clickable="true"
                android:id="@+id/hymnShareButStanzaLayout">
                <ImageView
                    app:srcCompat="@drawable/share_stanza_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hymnShareButStanza"/>

            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallTableSizeButton"
                android:background="@color/transBlack"
                android:gravity="center"
                android:visibility="invisible"
                android:clickable="true"
                android:id="@+id/hymnMoreOptionsFontLayout">
                <ImageView
                    app:srcCompat="@drawable/font_size_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hymnMoreOptionsFont"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallTableSizeButton"
                android:background="@color/transBlack"
                android:gravity="center"
                android:visibility="invisible"
                android:clickable="true"
                android:id="@+id/hymnFavButNoLayout">


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallTableSizeButton"
                android:background="@color/transBlack"
                android:gravity="center"
                android:visibility="invisible"
                android:clickable="true"
                android:id="@+id/hymnShareButWholeLayout">
                <ImageView
                    app:srcCompat="@drawable/share_whole_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hymnShareButWhole"/>

            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="@dimen/smallTableSizeButton">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallTableSizeButton"
                android:background="@color/transBlack"
                android:gravity="center"
                android:clickable="true"
                android:id="@+id/hymnMoreOptionsLayout">
                <ImageView
                    app:srcCompat="@drawable/options_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:id="@+id/hymnMoreOptions"
                    android:layout_alignParentLeft="true" />
                <ImageView
                    app:srcCompat="@drawable/options_icon_on"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:id="@+id/hymnMoreOptions_on"
                    android:layout_alignParentLeft="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallTableSizeButton"
                android:clickable="true"
                android:gravity="center"
                android:background="@color/transBlack"
                android:id="@+id/hymnFavButLayout">

                <ImageView
                    app:srcCompat="@drawable/heart_icon"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/hymnFavBut"
                    android:contentDescription="Set Favourite"
                    android:layout_alignParentLeft="true" />

                <ImageView
                    app:srcCompat="@drawable/heart_icon_on"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/hymnFavBut_on"
                    android:visibility="invisible"
                    android:contentDescription="Set Favourite"
                    android:layout_alignParentLeft="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallTableSizeButton"
                android:gravity="center"
                android:background="@color/transBlack"
                android:clickable="true"
                android:id="@+id/hymnShareButLayout">

                <ImageView
                    app:srcCompat="@drawable/share_icon"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hymnShareBut"
                    android:layout_alignParentLeft="true" />
                <ImageView
                    app:srcCompat="@drawable/share_icon_on"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:id="@+id/hymnShareBut_on"
                    android:layout_alignParentLeft="true" />

            </RelativeLayout>

        </TableRow>

    </TableLayout>



</RelativeLayout>

